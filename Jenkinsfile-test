@Library('automation@v3.3.1')

def label = "test_leetbot_${UUID.randomUUID().toString()}"

String image = 'node:12-alpine'

// Each step the pipeline shall execute.
Map<String,Closure> steps = [
    "Setup": {
        sh 'yarn install'
    },
    "Test": {
        sh 'yarn test'
        publishHTML(target: [
            allowMissing: false,
            alwaysLinkToLastBuild: false,
            keepAll: false,
            reportDir: 'coverage',
            reportFiles: 'index.html',
            reportName: 'Jest Report'
        ])
    }
]

genericAutomation.github(label, image, steps)
